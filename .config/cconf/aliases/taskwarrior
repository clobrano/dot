alias wk='task rc:~/.taskworkrc'
alias me='task'

alias donetoday='wk end.after:yesterday complete sl'

alias wknext="wk \"+PENDING (+OVERDUE or +TODAY or priority:H or +ACTIVE)\" sl"
alias next="me \"+PENDING (+OVERDUE or +TODAY or priority:H or +ACTIVE)\" sl"

alias wkactive="wk +ACTIVE sl"
alias active="me +ACTIVE sl"

alias wkweek="wk due.before:eow sl"
alias week="me due.before:eow sl"

alias wkmonth="wk due.before:eom sl"
alias month="me due.before:eom sl"

alias vit='export TASKRC=~/.taskrc  TASKDATA=$ME/Taskwarrior; vit'
