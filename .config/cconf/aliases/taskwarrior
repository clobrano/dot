# ME
alias next="task \"+PENDING (+OVERDUE or +TODAY or priority:H or +ACTIVE)\" list"
alias n7="task due.before:7d list"
alias active="task +ACTIVE list"
alias week="task due.before:eow list"
alias month="task due.before:eom list"
alias prio="task \"priority:H or priority:M or priority:L\" list"

# WORK
